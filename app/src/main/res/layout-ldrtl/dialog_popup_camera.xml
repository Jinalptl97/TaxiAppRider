<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerInParent="true"
   android:background="@android:color/transparent">

    <!--<RelativeLayout-->
    <!--android:id="@+id/layoutTop"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="50dp"></RelativeLayout>-->


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20dp"
        app:cardCornerRadius="1dp"
        app:cardElevation="@dimen/_10dp">


    <LinearLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/_10dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_10dp">

            <ImageView
                android:src="@drawable/add_image"
                android:id="@+id/img_ride"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"/>


        <com.taxibookingrider.Controller.Tahoma
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:paddingRight="@dimen/_10dp"
            android:paddingLeft="@dimen/_15dp"
            android:paddingBottom="@dimen/_10dp"
            android:text="@string/Select_Image"
            android:textAlignment="center"
            android:textColor="@color/dark_text"
            android:textSize="@dimen/_15_sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/light_text" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/_10dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_10dp">

            <ImageView
                android:src="@drawable/image_gallery"
                android:id="@+id/img_camera"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"/>

            <com.taxibookingrider.Controller.Tahoma
                android:id="@+id/txt_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/Gallery"
                android:paddingRight="@dimen/_10dp"
                android:paddingLeft="@dimen/_15dp"
                android:paddingBottom="@dimen/_10dp"
                android:textAlignment="center"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/_15_sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/light_text" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/_10dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_10dp">

            <ImageView
                android:src="@drawable/camera"
                android:id="@+id/img_gallery"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"/>

            <com.taxibookingrider.Controller.Tahoma
                android:id="@+id/txt_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingRight="@dimen/_10dp"
                android:paddingLeft="@dimen/_15dp"
                android:paddingBottom="@dimen/_10dp"
                android:text="@string/Camera"
                android:textAlignment="center"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/_15_sp" />

        </LinearLayout>





    </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>




