<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/registrationbg">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/whole"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activities.FirstScreen">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_20dp">


            <ImageView
                android:id="@+id/logo"
                android:layout_width="@dimen/_170dp"
                android:layout_height="@dimen/_120dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@drawable/registration_car" />

            <com.taxibookingrider.Controller.Tahoma
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/logo"
                android:gravity="center"
                android:text="@string/enter_your_mobile"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/_18_sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/_80dp"
            android:layout_height="@dimen/_80dp"
            android:layout_gravity="center"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_50dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_25dp"
                android:layout_marginRight="@dimen/_25dp">


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <EditText
                        android:id="@+id/edit_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/Black"
                        android:hint="@string/enter_your_mobile"
                        android:inputType="number"
                        android:gravity="right"
                        android:maxLength="8"
                        android:paddingTop="@dimen/_3dp"
                        android:textColor="@color/dark_text"
                        android:textColorHint="@color/dark_text"
                        android:textSize="@dimen/_15_sp" />


                </android.support.design.widget.TextInputLayout>


                <ImageView
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_width="@dimen/_25dp"
                    android:layout_height="@dimen/_25dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/phone" />

            </RelativeLayout>

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/_2dp"-->
            <!--android:layout_marginLeft="@dimen/_25dp"-->
            <!--android:layout_marginRight="@dimen/_25dp"-->
            <!--android:background="@color/button_color" />-->


            <RelativeLayout
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40dp"
                android:layout_marginBottom="@dimen/_25dp"
                android:layout_marginLeft="@dimen/_25dp"
                android:layout_marginRight="@dimen/_25dp"
                android:layout_marginTop="@dimen/_30dp"
                android:background="@drawable/button_background"
                android:clickable="true"
                android:elevation="@dimen/_10dp"
                android:foreground="?attr/selectableItemBackgroundBorderless">


                <com.taxibookingrider.Controller.Tahoma
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:text="@string/next"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_15_sp" />


            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>
</ScrollView>