<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/registrationbg"
    tools:context=".Activity.Login_Activty">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/logolayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="@dimen/_170dp"
                android:layout_height="@dimen/_120dp"
                android:layout_gravity="center"
                android:src="@drawable/registration_car" />


            <com.taxibookingrider.Controller.Tahoma
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/forgot_password"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/_18_sp"  />


        </LinearLayout>



        <RelativeLayout
            android:id="@+id/loginlayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40dp"
            android:layout_below="@+id/logolayout"
            android:layout_marginTop="@dimen/_10dp">




        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_25dp"
            android:layout_marginRight="@dimen/_25dp"
            android:layout_marginTop="@dimen/_80dp">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_forgot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/enter_otp_code"
                android:backgroundTint="@color/Black"
                android:paddingRight="@dimen/_5dp"
                android:textSize="@dimen/_15_sp"
                android:gravity="right"
                android:textColor="@color/dark_text"
                android:textColorHint="@color/dark_text" />
            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:layout_width="@dimen/_25dp"
                android:layout_height="@dimen/_25dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/_10dp"
                android:src="@drawable/password" />



        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40dp"
            android:layout_below="@+id/edit22"
            android:layout_marginLeft="@dimen/_25dp"
            android:layout_marginRight="@dimen/_25dp"
            android:layout_marginTop="@dimen/_10dp"
            android:focusable="true"
            android:elevation="@dimen/_3dp"
            android:background="@drawable/button_background"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:clickable="true">


            <com.taxibookingrider.Controller.Tahoma
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/next"
                android:textColor="@color/White"
                android:textSize="@dimen/_18_sp" />


        </RelativeLayout>


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/next"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginRight="@dimen/_10dp"
            android:layout_marginTop="@dimen/_50dp"
            android:background="@color/white_tranparent" />


        <RelativeLayout
            android:id="@+id/skip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40dp"
            android:layout_below="@+id/view"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/_50dp"
            android:layout_marginRight="@dimen/_50dp">


            <com.taxibookingrider.Controller.Tahoma
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7_sp"
                android:gravity="center"
                android:text="@string/resend_otp_code"
                android:textSize="@dimen/_15_sp"
                android:textColor="@color/dark_text"
                android:textColorHint="@color/dark_text" />


        </RelativeLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/loginlayout"
            android:layout_marginTop="@dimen/_5dp"
            android:gravity="bottom"
            android:paddingBottom="@dimen/_15dp">

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>