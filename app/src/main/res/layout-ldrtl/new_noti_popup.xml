<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/_10dp"
    android:layout_marginLeft="@dimen/_10dp"
    android:layout_marginRight="@dimen/_10dp"
    android:layout_marginTop="@dimen/_10dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10dp"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_marginRight="@dimen/_10dp"
        android:layout_marginTop="@dimen/_10dp"
        app:cardCornerRadius="@dimen/_3dp"
        app:cardElevation="@dimen/_7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_15dp"
                android:orientation="horizontal">

                <ImageView
                    android:src="@drawable/popup_close"
                    android:id="@+id/img_ride"
                    android:layout_width="@dimen/_25dp"
                    android:layout_height="@dimen/_25dp" />

                <com.taxibookingrider.Controller.Tahoma
                    android:id="@+id/txt_ride"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/_10dp"
                    android:text="Delete Account"
                    android:textColor="@color/dark_text"
                    android:textSize="@dimen/_15_sp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/light_text" />


            <com.taxibookingrider.Controller.Tahoma
                android:id="@+id/msglaert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginRight="@dimen/_15dp"
                android:layout_marginTop="@dimen/_10dp"
                android:padding="@dimen/_10dp"
                android:textColor="@color/dark_text"
                android:textSize="@dimen/_15_sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="@dimen/_10dp"
                android:gravity="right"
                android:orientation="horizontal"
                android:padding="@dimen/_10dp">


                <com.taxibookingrider.Controller.Tahoma
                    android:id="@+id/txt_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10dp"
                    android:text="@string/OK"
                    android:textColor="@color/light_text"
                    android:textSize="@dimen/_15_sp" />

                <com.taxibookingrider.Controller.Tahoma
                    android:id="@+id/txt_cancle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10dp"
                    android:text="@string/Cancel"
                    android:textColor="@color/dark_text"
                    android:textSize="@dimen/_15_sp" />


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>

