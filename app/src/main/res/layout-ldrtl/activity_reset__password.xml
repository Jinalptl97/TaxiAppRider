<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/registrationbg">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.Login_Activty">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/logolayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="@dimen/_170dp"
                    android:layout_height="@dimen/_120dp"
                    android:layout_gravity="center"
                    android:src="@drawable/registration_car" />


                <com.taxibookingrider.Controller.Tahoma
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/Reset_Password"
                    android:textColor="@color/dark_text"
                    android:textSize="@dimen/_18_sp" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="@dimen/_80dp"
                android:layout_height="@dimen/_80dp"
                android:layout_gravity="center"
                />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_25dp"
                android:layout_marginRight="@dimen/_25dp"
                android:layout_marginTop="@dimen/_40dp">


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_newpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <EditText
                        android:id="@+id/newpassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/Black"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:maxLength="8"
                        android:paddingRight="@dimen/_5dp"
                        android:gravity="right"
                        android:paddingTop="@dimen/_3dp"
                        android:textColor="@color/dark_text"
                        android:textColorHint="@color/dark_text"
                        android:textSize="@dimen/_15_sp" />

                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:layout_width="@dimen/_25dp"
                    android:layout_height="@dimen/_25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="@dimen/_10dp"
                    android:src="@drawable/password" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_50dp">


                <com.taxibookingrider.Controller.Tahoma
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/enter_character"
                    android:textColor="@color/Black"
                    android:textStyle="bold" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_25dp"
                android:layout_marginRight="@dimen/_25dp">


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_confirmpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <EditText
                        android:id="@+id/confirmnewpassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/passwordlayout"
                        android:backgroundTint="@color/Black"
                        android:hint="@string/Confirm_Password"
                        android:inputType="textPassword"
                        android:maxLength="8"
                        android:paddingRight="@dimen/_5dp"
                        android:gravity="right"
                        android:paddingTop="@dimen/_3dp"
                        android:textColor="@color/dark_text"
                        android:textColorHint="@color/dark_text"
                        android:textSize="@dimen/_15_sp" />

                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:layout_width="@dimen/_25dp"
                    android:layout_height="@dimen/_25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="@dimen/_10dp"
                    android:src="@drawable/password" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40dp"
                android:layout_below="@+id/edit22"
                android:layout_marginLeft="@dimen/_25dp"
                android:layout_marginRight="@dimen/_25dp"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@drawable/button_background">


                <com.taxibookingrider.Controller.Tahoma
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/Submit"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_18_sp" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/loginlayout"
                android:layout_marginTop="@dimen/_5dp"
                android:gravity="bottom"
                android:paddingBottom="@dimen/_15dp">

            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>
</ScrollView>