<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="2dp"
    app:cardElevation="@dimen/_7dp">

    <LinearLayout
        android:id="@+id/trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5dp"
        android:background="@color/White"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_7dp"
            android:layout_marginRight="@dimen/_7dp"
            android:orientation="vertical"
            android:padding="@dimen/_5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.taxibookingrider.Controller.Tahoma
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Date"
                    android:textColor="@color/dark_text"
                    android:textSize="@dimen/_15_sp" />


                <com.taxibookingrider.Controller.Tahoma
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textColor="@color/dark_text"
                    android:textSize="@dimen/_15_sp" />


            </RelativeLayout>

            <View
                android:layerType="software"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/_5dp"
                android:background="@drawable/dotted_black" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_7dp"
            android:layout_marginRight="@dimen/_7dp"
            android:orientation="vertical"
            android:padding="@dimen/_5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.taxibookingrider.Controller.Tahoma
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Time"
                    android:textColor="@color/dark_text"
                    android:textSize="@dimen/_15_sp" />


                <com.taxibookingrider.Controller.Tahoma
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textColor="@color/dark_text"
                    android:textSize="@dimen/_15_sp" />


            </RelativeLayout>

            <View
                android:layerType="software"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/_5dp"
                android:background="@drawable/dotted_black" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_7dp"
            android:layout_marginRight="@dimen/_7dp"
            android:orientation="vertical"
            android:padding="@dimen/_5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.taxibookingrider.Controller.Tahoma
                    android:id="@+id/fromtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/From"
                    android:textColor="@color/dark_text"
                    android:textSize="@dimen/_15_sp" />


                <com.taxibookingrider.Controller.Tahoma
                    android:id="@+id/from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_toRightOf="@+id/fromtext"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/dark_text"
                    android:textSize="@dimen/_15_sp" />


            </RelativeLayout>

            <View
                android:layerType="software"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/_5dp"
                android:background="@drawable/dotted_black" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_7dp"
            android:layout_marginRight="@dimen/_7dp"
            android:orientation="vertical"
            android:padding="@dimen/_5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.taxibookingrider.Controller.Tahoma
                    android:id="@+id/totext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/To"
                    android:textColor="@color/dark_text"
                    android:textSize="@dimen/_15_sp" />


                <com.taxibookingrider.Controller.Tahoma
                    android:id="@+id/to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_toRightOf="@+id/totext"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/dark_text"
                    android:textSize="@dimen/_15_sp" />


            </RelativeLayout>

            <View
                android:layerType="software"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/_5dp"
                android:background="@drawable/dotted_black" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_7dp"
            android:layout_marginRight="@dimen/_7dp"
            android:orientation="vertical"
            android:padding="@dimen/__3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.taxibookingrider.Controller.Tahoma
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Payment_Amount"
                    android:textColor="@color/dark_text"
                    android:textSize="@dimen/_15_sp" />


                <com.taxibookingrider.Controller.TahomaBold
                    android:id="@+id/fare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textColor="@color/dark_text"
                    android:textSize="@dimen/_15_sp" />


            </RelativeLayout>

            <View
                android:layerType="software"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/_5dp"
                android:background="@drawable/dotted_black" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_7dp"
            android:layout_marginRight="@dimen/_7dp"
            android:orientation="vertical"
            android:padding="@dimen/_5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.taxibookingrider.Controller.Tahoma
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Payment_By"
                    android:textColor="@color/dark_text"
                    android:textSize="@dimen/_15_sp" />


                <com.taxibookingrider.Controller.Tahoma
                    android:id="@+id/payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textColor="@color/dark_text"
                    android:textSize="@dimen/_15_sp" />


            </RelativeLayout>

            <View
                android:layerType="software"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/_5dp"
                android:background="@drawable/dotted_black" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_7dp"
            android:layout_marginRight="@dimen/_7dp"
            android:orientation="vertical"
            android:padding="@dimen/_5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.taxibookingrider.Controller.Tahoma
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Car_Type"
                    android:textColor="@color/dark_text"
                    android:textSize="@dimen/_15_sp" />


                <com.taxibookingrider.Controller.Tahoma
                    android:id="@+id/cartype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textColor="@color/dark_text"
                    android:textSize="@dimen/_15_sp" />


            </RelativeLayout>

            <View
                android:layerType="software"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/_5dp"
                android:background="@drawable/dotted_black" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_7dp"
            android:layout_marginRight="@dimen/_7dp"
            android:orientation="vertical"
            android:padding="@dimen/_5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.taxibookingrider.Controller.Tahoma
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Trip_Status"
                    android:textColor="@color/dark_text"
                    android:textSize="@dimen/_15_sp" />


                <com.taxibookingrider.Controller.Tahoma
                    android:id="@+id/tripstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textColor="@color/dark_text"
                    android:textSize="@dimen/_15_sp" />


            </RelativeLayout>


            <View
                android:layerType="software"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/_5dp"
                android:background="@drawable/dotted_black" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_7dp"
            android:layout_marginRight="@dimen/_7dp"
            android:orientation="vertical"
            android:padding="@dimen/_5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.taxibookingrider.Controller.Tahoma
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Trip_no"
                    android:textColor="@color/dark_text"
                    android:textSize="@dimen/_15_sp" />


                <com.taxibookingrider.Controller.Tahoma
                    android:id="@+id/trip_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="43"
                    android:textColor="@color/dark_text"
                    android:textSize="@dimen/_15_sp" />


            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>




